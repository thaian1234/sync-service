# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=password
DATABASE_NAME=cms_db

# Database Connection Pool Optimization
# With Redis cache: Reduced from 10 to 5 (70-90% cache hit rate)
# Formula: (Concurrent Kafka Messages Ã— 1) + Safety Margin
# Current: 3 concurrent messages + 2 safety = 5
DB_CONNECTION_POOL_SIZE=5

# Queue limit for waiting connections (0 = unlimited)
DB_QUEUE_LIMIT=0

# Connection timeout in milliseconds
DB_CONNECT_TIMEOUT=10000

# Idle connection timeout in milliseconds (connections unused for this duration are released)
DB_IDLE_TIMEOUT=60000

# Slow query threshold in milliseconds (queries exceeding this are logged)
DB_SLOW_QUERY_THRESHOLD=1000

# Enable SQL query logging (use only in development)
DB_LOGGING=false

# Redis Configuration (for event idempotency cache)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password  # Uncomment if Redis requires authentication
REDIS_DB=0
# TTL in seconds - how long to keep processed event IDs in cache
REDIS_TTL=300  # 5 minutes default

# Kafka Configuration
KAFKA_BROKER=localhost:9092
KAFKA_CLIENT_ID=cms-service
KAFKA_CONSUMER_GROUP=cms-service-group

# Application
PORT=3000
NODE_ENV=development
